<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>product-list</title>
    <%- include('../partials/headlink'); %>

</head>

<body>
    <%- include('../partials/header'); %>
        <!-- <h1 style="margin: 100px 0px 50px 0px;color: red;">Home page</h1> -->
        <div class="container">
            <h3 style="margin: 90px 0px 20px 0px">
                <%= (admin) ? 'Admin Product List' : 'Added Products list' %>
            </h3>
            <% if(products.length) { %>
                <div class="row">
                    <% for(let product of products){ %>
                        <div class="col-md-4" style="margin: 15px 0px;">
                            <div class="product">
                                <div class="text-center">
                                    <img src="<%= product.image %>" class="img-fluid" alt="">
                                </div>
                                <h5 style="margin-top: 20px;">
                                    <%= product.title %>
                                </h5>
                                <div>Price: <strong>$<%= product.price %></strong></div>
                                <p>
                                    <%= product.description %>
                                </p>
                                <% if(admin) { %>
                                    <div class="my-2 text-center d-flex justify-content-center ">
                                        <a href="/products/edit/<%= product.id %>" class="btn btn-primary mx-2">Edit</a>
                                        <form action="/products/delete" method="post">
                                            <input type="hidden" value="<%= product.id %>" name="productId">
                                            <button class="btn btn-danger">Delete</button>
                                        </form>

                                    </div>

                                    <% } else { %>
                                        <div class="my-2 text-center d-flex justify-content-center ">
                                            <a href="/product/details/<%= product.id %>"
                                                class="btn btn-primary mx-2">View
                                                Details</a>
                                            <%- include('../partials/cartbtn', {product:product}) %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>

                        <% } %>
                </div>
                <% } else { %>
                    <div>No products available</div>
                    <% } %>
        </div>

</body>

</html>